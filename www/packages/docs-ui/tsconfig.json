{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "paths": {
      "docs-ui": ["./src/index.ts"],
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo-client",
    "noEmit": false,
    "jsx": "react",
    "lib": ["dom", "ES2015", "es2021"],
    "module": "ESNext",
    "target": "es6",
    "declaration": true,
    "declarationMap": true,
  },
  "include": [
    "src/**/*",
    "tailwind.config.js",
    "postcss.config.js"
  ]
}
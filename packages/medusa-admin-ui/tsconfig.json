{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "paths": {
      "gatsby": ["./src/compat/gatsby-compat.tsx"],
      "@reach/router": ["./src/compat/reach-router-compat.tsx"]
    }
  },
  "include": ["src", ".storybook/**/*.ts", ".storybook/**/*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }],
  // ts-node overrides for Storybook.
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
